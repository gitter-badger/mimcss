{
	"compilerOptions": {
		"declaration": true,
		"outDir": "./lib/",
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": false,
		"strictNullChecks": true,
		"module": "commonjs",
		"target": "ES2017",
		"lib": [ "ES2017", "dom" ],
		"experimentalDecorators": true,
		"jsx": "react",
		"preserveConstEnums": false
	},

	"include": [
		"./src/**/*"
	]
}